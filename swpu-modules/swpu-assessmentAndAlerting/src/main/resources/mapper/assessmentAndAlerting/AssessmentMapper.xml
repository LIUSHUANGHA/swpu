<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swpu.assessmentAndAlerting.mapper.AssessmentMapper">
    
    <resultMap type="Assessment" id="AssessmentResult">
        <result property="assessmentId"    column="assessment_id"    />
        <result property="identificationId"    column="identification_id"    />
        <result property="assessmentResult"    column="assessment_result"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectAssessmentVo">
        select assessment_id, identification_id, assessment_result, remark from assessment
    </sql>

    <select id="selectAssessmentList" parameterType="Assessment" resultMap="AssessmentResult">
        <include refid="selectAssessmentVo"/>
        <where>  
            <if test="identificationId != null "> and identification_id = #{identificationId}</if>
            <if test="assessmentResult != null "> and assessment_result = #{assessmentResult}</if>
        </where>
    </select>
    
    <select id="selectAssessmentByAssessmentId" parameterType="Integer" resultMap="AssessmentResult">
        <include refid="selectAssessmentVo"/>
        where assessment_id = #{assessmentId}
    </select>
        
    <insert id="insertAssessment" parameterType="Assessment" useGeneratedKeys="true" keyProperty="assessmentId">
        insert into assessment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="identificationId != null">identification_id,</if>
            <if test="assessmentResult != null">assessment_result,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="identificationId != null">#{identificationId},</if>
            <if test="assessmentResult != null">#{assessmentResult},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateAssessment" parameterType="Assessment">
        update assessment
        <trim prefix="SET" suffixOverrides=",">
            <if test="identificationId != null">identification_id = #{identificationId},</if>
            <if test="assessmentResult != null">assessment_result = #{assessmentResult},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where assessment_id = #{assessmentId}
    </update>

    <delete id="deleteAssessmentByAssessmentId" parameterType="Integer">
        delete from assessment where assessment_id = #{assessmentId}
    </delete>

    <delete id="deleteAssessmentByAssessmentIds" parameterType="String">
        delete from assessment where assessment_id in 
        <foreach item="assessmentId" collection="array" open="(" separator="," close=")">
            #{assessmentId}
        </foreach>
    </delete>
</mapper>