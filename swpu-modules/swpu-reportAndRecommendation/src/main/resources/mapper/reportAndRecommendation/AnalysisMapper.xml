<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.swpu.reportAndRecommendation.mapper.AnalysisMapper">
    
    <resultMap type="Analysis" id="AnalysisResult">
        <result property="peopleId"    column="people_id"    />
        <result property="analysisId"    column="analysis_id"    />
        <result property="analysisResult"    column="analysis_result"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectAnalysisVo">
        select people_id, analysis_id, analysis_result, remark from analysis
    </sql>

    <select id="selectAnalysisList" parameterType="Analysis" resultMap="AnalysisResult">
        <include refid="selectAnalysisVo"/>
        <where>  
            <if test="peopleId != null "> and people_id = #{peopleId}</if>
            <if test="analysisResult != null  and analysisResult != ''"> and analysis_result = #{analysisResult}</if>
        </where>
    </select>
    
    <select id="selectAnalysisByAnalysisId" parameterType="Integer" resultMap="AnalysisResult">
        <include refid="selectAnalysisVo"/>
        where analysis_id = #{analysisId}
    </select>
        
    <insert id="insertAnalysis" parameterType="Analysis" useGeneratedKeys="true" keyProperty="analysisId">
        insert into analysis
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="peopleId != null">people_id,</if>
            <if test="analysisResult != null">analysis_result,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="peopleId != null">#{peopleId},</if>
            <if test="analysisResult != null">#{analysisResult},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateAnalysis" parameterType="Analysis">
        update analysis
        <trim prefix="SET" suffixOverrides=",">
            <if test="peopleId != null">people_id = #{peopleId},</if>
            <if test="analysisResult != null">analysis_result = #{analysisResult},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where analysis_id = #{analysisId}
    </update>

    <delete id="deleteAnalysisByAnalysisId" parameterType="Integer">
        delete from analysis where analysis_id = #{analysisId}
    </delete>

    <delete id="deleteAnalysisByAnalysisIds" parameterType="String">
        delete from analysis where analysis_id in 
        <foreach item="analysisId" collection="array" open="(" separator="," close=")">
            #{analysisId}
        </foreach>
    </delete>
</mapper>